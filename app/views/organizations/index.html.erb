<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        <i class="fas fa-building"></i> Organizations
      </h1>
      <%= link_to new_organization_path, class: 'btn btn-primary' do %>
        <i class="fas fa-plus"></i> Create Organization
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <% @organizations.each do |organization| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <%= organization.name %>
            <% if current_user.organization_id == organization.id %>
              <span class="badge bg-success">Your Organization</span>
            <% end %>
          </h5>
          <p class="card-text"><%= organization.description %></p>
          <div class="mb-3">
            <small class="text-muted">
              <i class="fas fa-globe"></i> <%= organization.domain %><br>
              <i class="fas fa-users"></i> <%= organization.member_count %> members<br>
              <i class="fas fa-user-check"></i> <%= organization.active_member_count %> active
            </small>
          </div>
          <div class="d-grid gap-2">
            <%= link_to 'View Details', organization_path(organization), class: 'btn btn-outline-primary' %>
            <% if current_user.organization_id != organization.id %>
              <%= link_to 'Join Organization', organization_path(organization), class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @organizations.empty? %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body text-center">
          <h4>No Organizations Available</h4>
          <p class="text-muted">Be the first to create an organization!</p>
          <%= link_to 'Create Organization', new_organization_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
