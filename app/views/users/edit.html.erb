<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-warning text-dark text-center py-4">
        <h2 class="mb-0">
          <i class="fas fa-edit"></i> Edit Profile
        </h2>
        <p class="mb-0 mt-2">Update your account information</p>
      </div>
      
      <div class="card-body p-4">
        <%= form_for @user, html: { class: 'needs-validation', novalidate: true } do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>
                  <h6 class="alert-heading mb-1">Please fix the following errors:</h6>
                  <ul class="mb-0 ps-3">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :first_name, class: 'form-label' do %>
                  <i class="fas fa-user"></i> First Name
                <% end %>
                <%= f.text_field :first_name, 
                    class: 'form-control form-control-lg', 
                    placeholder: 'Enter your first name',
                    required: true %>
                <div class="invalid-feedback">
                  Please enter your first name.
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :last_name, class: 'form-label' do %>
                  <i class="fas fa-user"></i> Last Name
                <% end %>
                <%= f.text_field :last_name, 
                    class: 'form-control form-control-lg', 
                    placeholder: 'Enter your last name',
                    required: true %>
                <div class="invalid-feedback">
                  Please enter your last name.
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' do %>
              <i class="fas fa-envelope"></i> Email Address
            <% end %>
            <%= f.email_field :email, 
                class: 'form-control form-control-lg', 
                placeholder: 'Enter your email address',
                required: true %>
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :date_of_birth, class: 'form-label' do %>
                  <i class="fas fa-calendar"></i> Date of Birth
                <% end %>
                <%= f.date_field :date_of_birth, 
                    class: 'form-control form-control-lg', 
                    required: true %>
                <div class="invalid-feedback">
                  Please enter your date of birth.
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :phone, class: 'form-label' do %>
                  <i class="fas fa-phone"></i> Phone Number
                <% end %>
                <%= f.telephone_field :phone, 
                    class: 'form-control form-control-lg', 
                    placeholder: '+1 (555) 123-4567' %>
                <div class="form-text">Optional</div>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <%= f.label :organization_id, class: 'form-label' do %>
              <i class="fas fa-building"></i> Organization
            <% end %>
            <%= f.collection_select :organization_id, Organization.all, :id, :name, 
                { prompt: 'Select an organization (optional)' }, 
                { class: 'form-select form-select-lg' } %>
            <div class="form-text">You can change your organization or leave it empty</div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Update Profile", class: 'btn btn-warning btn-lg text-dark' %>
            <%= link_to "Cancel", profile_path, class: 'btn btn-outline-secondary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script> 