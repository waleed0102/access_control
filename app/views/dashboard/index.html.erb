<div class="row">
  <div class="col-12">
    <h1 class="mb-4">
      <i class="fas fa-tachometer-alt"></i> Dashboard
    </h1>
  </div>
</div>

<% if current_user.organization_member? %>
  <!-- Organization Member Dashboard -->
  <div class="row">
    <!-- User Info Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-user"></i> User Information
          </h5>
        </div>
        <div class="card-body">
          <p><strong>Name:</strong> <%= current_user.full_name %></p>
          <p><strong>Age:</strong> <%= current_user.age %> years old</p>
          <p><strong>Age Group:</strong> <%= @user_age_group&.name || 'Not assigned' %></p>
          <p><strong>Organization:</strong> <%= @organization.name %></p>
          <p><strong>Roles:</strong> 
            <% @user_roles.each do |role| %>
              <span class="badge bg-primary"><%= role.name.titleize %></span>
            <% end %>
          </p>
          <% if @requires_consent %>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle"></i>
              Parental consent required
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Organization Stats Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-chart-bar"></i> Organization Statistics
          </h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <h3 class="text-primary"><%= @total_members %></h3>
              <p class="text-muted">Total Members</p>
            </div>
            <div class="col-6">
              <h3 class="text-success"><%= @active_members %></h3>
              <p class="text-muted">Active Members</p>
            </div>
          </div>
          <hr>
          <p><strong>Activity Rate:</strong> <%= (@active_members.to_f / @total_members * 100).round(1) %>%</p>
        </div>
      </div>
    </div>

    <!-- Access Control Card -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-shield-alt"></i> Access Control
          </h5>
        </div>
        <div class="card-body">
          <p><strong>Accessible Spaces:</strong> <%= @accessible_spaces.count %> of <%= @participation_spaces.count %></p>
          <p><strong>Content Filter:</strong> <%= @user_age_group&.content_filter_level&.titleize || 'Standard' %></p>
          <p><strong>Time Restrictions:</strong> 
            <% if @user_age_group&.time_restrictions&.any? %>
              <%= @user_age_group.time_restrictions['start_hour'] %>:00 - <%= @user_age_group.time_restrictions['end_hour'] %>:00
            <% else %>
              None
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Participation Spaces -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">
            <i class="fas fa-users"></i> Participation Spaces
          </h5>
          <% if current_user.organization_moderator? %>
            <%= link_to new_organization_participation_space_path(@organization), class: 'btn btn-primary btn-sm' do %>
              <i class="fas fa-plus"></i> New Space
            <% end %>
          <% end %>
        </div>
        <div class="card-body">
          <% if @participation_spaces.any? %>
            <div class="row">
              <% @participation_spaces.each do |space| %>
                <div class="col-md-6 col-lg-4 mb-3">
                  <div class="card h-100 <%= current_user.can_access_space?(space) ? 'border-success' : 'border-secondary' %>">
                    <div class="card-body">
                      <h6 class="card-title">
                        <%= space.name %>
                        <% if current_user.can_access_space?(space) %>
                          <span class="badge bg-success">Accessible</span>
                        <% else %>
                          <span class="badge bg-secondary">Restricted</span>
                        <% end %>
                      </h6>
                      <p class="card-text"><%= space.description %></p>
                      <p class="card-text">
                        <small class="text-muted">
                          Age Group: <%= space.age_group.name %><br>
                          Status: <%= space.is_active? ? 'Active' : 'Inactive' %>
                        </small>
                      </p>
                      <%= link_to 'View Details', participation_space_path(space), class: 'btn btn-outline-primary btn-sm' %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No participation spaces available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Age Distribution Chart -->
  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-chart-pie"></i> Age Distribution
          </h5>
        </div>
        <div class="card-body">
          <% if @age_distribution.any? %>
            <% @age_distribution.each do |age_group, count| %>
              <div class="d-flex justify-content-between mb-2">
                <span><%= age_group %></span>
                <span class="badge bg-primary"><%= count %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No age distribution data available.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Role Distribution Chart -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-user-tag"></i> Role Distribution
          </h5>
        </div>
        <div class="card-body">
          <% if @role_distribution.any? %>
            <% @role_distribution.each do |role, count| %>
              <div class="d-flex justify-content-between mb-2">
                <span><%= role.titleize %></span>
                <span class="badge bg-info"><%= count %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No role distribution data available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <!-- Non-Member Dashboard -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body text-center">
          <h3>Welcome to Access Control System</h3>
          <p class="lead">You are not currently a member of any organization.</p>
          <p>Join an organization to access participation spaces and features.</p>
          <%= link_to 'Browse Organizations', organizations_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Available Organizations -->
  <div class="row mt-4">
    <div class="col-12">
      <h3>Available Organizations</h3>
      <div class="row">
        <% @organizations.each do |org| %>
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= org.name %></h5>
                <p class="card-text"><%= org.description %></p>
                <p class="card-text">
                  <small class="text-muted">
                    Members: <%= org.member_count %><br>
                    Domain: <%= org.domain %>
                  </small>
                </p>
                <%= link_to 'View Details', organization_path(org), class: 'btn btn-outline-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
