<!DOCTYPE html>
<html>
  <head>
    <title>Access Control System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <%= link_to 'Access Control', root_path, class: 'navbar-brand' %>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <% if current_user.organization_member? %>
                <li class="nav-item">
                  <%= link_to 'My Organization', organization_path(current_user.organization), class: 'nav-link' %>
                </li>
                <% if current_user.organization %>
                  <li class="nav-item">
                    <%= link_to 'Participation Spaces', organization_participation_spaces_path(current_user.organization), class: 'nav-link' %>
                  </li>
                <% end %>
                <% if current_user.organization_admin? %>
                  <li class="nav-item">
                    <%= link_to 'Analytics', analytics_organization_path(current_user.organization), class: 'nav-link' %>
                  </li>
                <% end %>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Organizations', organizations_path, class: 'nav-link' %>
                </li>
              <% end %>
            <% end %>
          </ul>
          
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-user"></i> <%= current_user.full_name %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <li><%= link_to 'Profile', profile_path, class: 'dropdown-item' %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'dropdown-item', onclick: 'event.preventDefault(); document.getElementById("sign-out-form").submit();' %></li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-3">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <main class="container mt-4">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-4 mt-5">
      <div class="container">
        <p>&copy; 2024 Access Control System. All rights reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Hidden sign out form -->
    <%= form_tag destroy_user_session_path, method: :delete, id: 'sign-out-form', style: 'display: none;' %>
    
    <!-- Simple dropdown handling -->
    <script>
      // Global variable to track if dropdown is initialized
      var dropdownInitialized = false;
      
      function initDropdown() {
        if (dropdownInitialized) return;
        
        var dropdownToggle = document.querySelector('#navbarDropdown');
        if (dropdownToggle) {
          // Remove data-bs-toggle to prevent Bootstrap from interfering
          dropdownToggle.removeAttribute('data-bs-toggle');
          
          // Add click handler
          dropdownToggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            var dropdownMenu = this.nextElementSibling;
            var isVisible = dropdownMenu.classList.contains('show');
            
            // Close all other dropdowns first
            document.querySelectorAll('.dropdown-menu.show').forEach(function(menu) {
              if (menu !== dropdownMenu) {
                menu.classList.remove('show');
              }
            });
            
            // Toggle current dropdown
            if (isVisible) {
              dropdownMenu.classList.remove('show');
            } else {
              dropdownMenu.classList.add('show');
            }
          });
          
          // Close dropdown when clicking outside
          document.addEventListener('click', function(e) {
            if (!dropdownToggle.contains(e.target)) {
              var dropdownMenu = dropdownToggle.nextElementSibling;
              dropdownMenu.classList.remove('show');
            }
          });
          
          dropdownInitialized = true;
        }
      }
      
      // Initialize on page load
      document.addEventListener('DOMContentLoaded', initDropdown);
      document.addEventListener('turbolinks:load', initDropdown);
    </script>
  </body>
</html>
