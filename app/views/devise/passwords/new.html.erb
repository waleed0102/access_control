<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg border-0 mt-5 auth-form-card">
        <div class="card-header bg-warning text-dark text-center py-4">
          <h2 class="mb-0">
            <i class="fas fa-key"></i> Reset Password
          </h2>
          <p class="mb-0 mt-2">Enter your email to receive reset instructions</p>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-4">
              <%= f.label :email, class: 'form-label' do %>
                <i class="fas fa-envelope"></i> Email Address
              <% end %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: 'form-control form-control-lg', 
                  placeholder: 'Enter your email address',
                  required: true %>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
              <div class="form-text">
                <i class="fas fa-info-circle"></i> We'll send you a link to reset your password.
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Send Reset Instructions", class: 'btn btn-warning btn-lg text-dark' %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <span class="text-muted">Remember your password?</span>
            <%= link_to "Sign in", new_session_path(resource_name), class: 'text-decoration-none ms-1' %>
          </div>
          
          <div class="text-center mt-3">
            <span class="text-muted">Don't have an account?</span>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-decoration-none ms-1' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
