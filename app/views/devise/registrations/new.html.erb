<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 mt-5 auth-form-card">
        <div class="card-header bg-success text-white text-center py-4">
          <h2 class="mb-0">
            <i class="fas fa-user-plus"></i> Create Account
          </h2>
          <p class="mb-0 mt-2">Join Access Control System</p>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :first_name, class: 'form-label' do %>
                    <i class="fas fa-user"></i> First Name
                  <% end %>
                  <%= f.text_field :first_name, autofocus: true, 
                      class: 'form-control form-control-lg', 
                      placeholder: 'Enter your first name',
                      required: true %>
                  <div class="invalid-feedback">
                    Please enter your first name.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :last_name, class: 'form-label' do %>
                    <i class="fas fa-user"></i> Last Name
                  <% end %>
                  <%= f.text_field :last_name, 
                      class: 'form-control form-control-lg', 
                      placeholder: 'Enter your last name',
                      required: true %>
                  <div class="invalid-feedback">
                    Please enter your last name.
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: 'form-label' do %>
                <i class="fas fa-envelope"></i> Email Address
              <% end %>
              <%= f.email_field :email, autocomplete: "email", 
                  class: 'form-control form-control-lg', 
                  placeholder: 'Enter your email address',
                  required: true %>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :date_of_birth, class: 'form-label' do %>
                    <i class="fas fa-calendar"></i> Date of Birth
                  <% end %>
                  <%= f.date_field :date_of_birth, 
                      class: 'form-control form-control-lg', 
                      required: true %>
                  <div class="invalid-feedback">
                    Please enter your date of birth.
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :phone, class: 'form-label' do %>
                    <i class="fas fa-phone"></i> Phone Number
                  <% end %>
                  <%= f.telephone_field :phone, 
                      class: 'form-control form-control-lg', 
                      placeholder: '+1 (555) 123-4567' %>
                  <div class="form-text">Optional</div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :organization_id, class: 'form-label' do %>
                <i class="fas fa-building"></i> Organization
              <% end %>
              <%= f.collection_select :organization_id, Organization.all, :id, :name, 
                  { prompt: 'Select an organization (optional)' }, 
                  { class: 'form-select form-select-lg' } %>
              <div class="form-text">You can join an organization later</div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :password, class: 'form-label' do %>
                    <i class="fas fa-lock"></i> Password
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", 
                      class: 'form-control form-control-lg', 
                      placeholder: 'Create a password',
                      required: true %>
                  <div class="invalid-feedback">
                    Please create a password (minimum 6 characters).
                  </div>
                  <% if @minimum_password_length %>
                    <div class="form-text">
                      <i class="fas fa-info-circle"></i> Minimum <%= @minimum_password_length %> characters
                    </div>
                  <% end %>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :password_confirmation, class: 'form-label' do %>
                    <i class="fas fa-lock"></i> Confirm Password
                  <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                      class: 'form-control form-control-lg', 
                      placeholder: 'Confirm your password',
                      required: true %>
                  <div class="invalid-feedback">
                    Please confirm your password.
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="terms" required>
              <label class="form-check-label" for="terms">
                I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>
              </label>
              <div class="invalid-feedback">
                You must agree before submitting.
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Create Account", class: 'btn btn-success btn-lg' %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <span class="text-muted">Already have an account?</span>
            <%= link_to "Sign in", new_session_path(resource_name), class: 'text-decoration-none ms-1' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
